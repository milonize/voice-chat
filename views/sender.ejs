<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sender</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      #toastBox {
        display: none;
      }
    </style>
    <link rel="stylesheet" href="./style.css" />
  </head>
  <body>
    <div class="row bg-body-tertiary">
      <div class="col-md-6 m-auto p-3">
        <nav class="navbar bg-body-tertiary">
          <div class="container-fluid">
            <div class="logo">
              <span class="navbar-brand mb-0 h1">VideoChat</span>
            </div>
            <div class="navItem">
              <a href="./recevier" class="btn btn-dark btn-sm">Recevied Call</a>

              <a class="text-decoration-none px-2 text-secondary fs-6" href=""
                >User Guide</a
              >
            </div>
          </div>
        </nav>
      </div>
    </div>

    <!-- <h2 class="text-center">Recevier</h2> -->
    <div class="row m-2">
      <div class="card col-md-3 m-auto mt-5">
        <div class="card-tittle mt-2"><h3>Call Now</h3></div>
        <div class="card-body">
          <div id="message"></div>

          <div>
            <input
              placeholder="Enter username..."
              type="text"
              id="username-input"
              class="form-control"
              id="username-input"
            /><br />
            <button class="btn btn-danger btn-sm" onclick="sendUsername()">
              Active Call ID
            </button>
            <button class="btn btn-success btn-sm" onclick="startCall()">
              Start Call
            </button>
          </div>
          <div id="usernameBox" class="mt-3">
            <div
              class="toast align-items-center text-bg-primary border-0"
              id="toastBox"
              role="alert"
              aria-live="assertive"
              aria-atomic="true"
            >
              <div class="d-flex">
                <div id="toast-body" class="toast-body"></div>
                <button
                  type="button"
                  class="btn-close btn-close-white me-2 m-auto"
                  data-bs-dismiss="toast"
                  aria-label="Close"
                ></button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="video-call-div">
      <video muted id="local-video" autoplay></video>
      <video id="remote-video" autoplay></video>
      <div class="call-action-div">
        <!-- <div class="action d-flex justify-content-center align-items-center"> -->
        <button
          id="muteVideo"
          class="btn btn-warning btn-sm"
          onclick="muteVideo()"
        >
          <img src="./images/camera-video-fill.svg" alt="" />
        </button>
        <button
          id="muteAudio"
          class="btn btn-danger btn-sm"
          onclick="muteAudio()"
        >
          <img src="./images/mic-fill.svg" alt="" />
        </button>
        <!-- </div> -->
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="./sender.js" defer></script>
    <script>
      const input = document.getElementById("username-input");
      input.value = localStorage.getItem("voiceUsername");
    </script>
  </body>
</html>
